<ToggleButton x:Class="TelegraphApp.DarkLightButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TelegraphApp"
             mc:Ignorable="d" d:Width="500" d:Height="500"
             d:DesignHeight="450" d:DesignWidth="800"  Background="#FFFDFDFD" VerticalAlignment="Center" HorizontalAlignment="Right" Width="50" Height="50">
    <ToggleButton.Resources>
        <Style TargetType="{x:Type Border}">
            <Setter Property="CornerRadius" Value="50" />
        </Style>
    </ToggleButton.Resources>
    <ToggleButton.Content>
        <Image Name="Imsu" Width="30" />
    </ToggleButton.Content>
</ToggleButton>
